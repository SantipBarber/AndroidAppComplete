<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#A1EEFACC"
    android:padding="20dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/logo_ilerna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:src="@drawable/ilerna_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/titleMain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="2"
        />

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ilerna Activities"
        app:layout_constraintBottom_toTopOf="@id/btnContainerMain"
        app:layout_constraintLeft_toLeftOf="@id/logo_ilerna"
        app:layout_constraintRight_toRightOf="@id/logo_ilerna"
        app:layout_constraintTop_toBottomOf="@id/logo_ilerna"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="32dp"
        app:layout_constraintVertical_weight="1"/>

    <LinearLayout
        android:id="@+id/btnContainerMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/titleMain"
        app:layout_constraintRight_toRightOf="@id/titleMain"
        app:layout_constraintTop_toBottomOf="@id/titleMain"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        app:layout_constraintVertical_weight="2">

        <Button
            android:id="@+id/btnActivity2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/purple_700"
            android:text="ACTIVITY 2"
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <Button
            android:id="@+id/btnActivity3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/purple_700"
            android:text="ACTIVITY 3"
            android:textStyle="bold"
            android:textSize="18dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>