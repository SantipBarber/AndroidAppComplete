<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTableActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createTableTitle"
            android:text="Crear Tabla"
            android:gravity="center"
            android:fontFamily="monospace"
            android:textSize="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/nameTable"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="monospace"
            android:hint="Introduce el nombre de la tabla"
            android:inputType="text"
            android:textSize="12dp"
            android:ems="10"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/col1"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="monospace"
            android:textSize="12dp"
            android:ems="10"
            android:hint="Introduce el nombre de la primera columna"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/col2"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="monospace"
            android:hint="Introduce el nombre de la segunda columna"
            android:textSize="12dp"
            android:ems="10"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/col3"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="monospace"
            android:hint="Introduce el nombre de la tercera columna"
            android:textSize="12dp"
            android:ems="10"/>
        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/col4"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="monospace"
            android:hint="Introduce el nombre de la primera columna"
            android:textSize="12dp"
            android:ems="10"/>-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createTableData"
            android:text="CREAR"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="14dp"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>